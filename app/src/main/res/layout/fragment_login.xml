<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="26%"
        app:layout_marginTopPercent="11%"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="37%"
        android:src="@drawable/ls_logo"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_below="@+id/iv_show"
        android:id="@+id/ll_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_widthPercent="88%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/phone"
            android:textColor="@color/black_383838"
            android:textSize="@dimen/size_14" />


        <www.zhouyan.project.widget.edittext.ClearEditText
            android:id="@+id/met_login_phone"
            style="@style/base_edittext2"
            android:paddingRight="@dimen/dimen_20"
            android:text=""
            android:inputType="number" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/v_phone"
        style="@style/base_line"
        android:background="@color/white"
        android:layout_below="@id/ll_phone"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:background="@color/text_color_login2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/v_phone"
        android:id="@+id/ll_pwd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_widthPercent="88%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="密码"
            android:textColor="@color/black_383838"
            android:textSize="@dimen/size_14" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <www.zhouyan.project.widget.edittext.ClearEditText
                android:id="@+id/met_login_password"
                style="@style/base_edittext2"
                android:text=""
                android:inputType="textPassword" />
            <CheckBox
                android:checked="false"
                android:id="@+id/cb_check"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/toggle_login"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/v_pwd"
        style="@style/base_line"
        android:background="@color/white"
        android:layout_below="@id/ll_pwd"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:background="@color/text_color_login2"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:layout_below="@id/v_pwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        android:textColor="@color/white"
        android:background="@drawable/bg_login_shape"
        android:gravity="center"
        android:textSize="@dimen/size_14"
        android:text="@string/login" />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="当前版本：v1.0.1"
        android:textColor="@color/text_color_login"
        android:textSize="@dimen/size_16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_22"
        android:layout_marginBottom="@dimen/dimen_22" />
    <LinearLayout
        android:id="@+id/ll_per"
        android:layout_below="@+id/bt_login"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="88%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginRightPercent="6%"
        app:layout_marginBottomPercent="2%"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tv_password"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_testac"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/text_color_login2"
                android:gravity="center"
                android:textSize="@dimen/size_14"
                android:text="找回密码" />
        </LinearLayout>
        <View
            style="@style/placeholder"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/tv_regist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_signnow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="@color/text_color_login2"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>