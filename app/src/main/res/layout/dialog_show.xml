<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_270"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_show">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:textSize="@dimen/size_14"
        android:textColor="@color/black"
        android:text="选择要上传照片"
        android:gravity="center"/>
    <View
        android:id="@+id/v_show"
        android:layout_below="@id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/text_trade"
        />
    <Button
        android:layout_below="@id/v_show"
        android:id="@+id/btn_dialog_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@null"
        android:textSize="@dimen/size_16"
        android:textColor="@color/text_requir"
        android:text="@string/confirm"
        android:gravity="center"
        />
</android.support.percent.PercentRelativeLayout>
