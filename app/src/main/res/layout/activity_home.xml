<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f3">

    <www.zhouyan.project.widget.viewpager.NoSlideViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/bottom_navigation_container" />

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_0.5"
        android:layout_above="@+id/bottom_navigation_container"
        android:background="#508e8e8e"/>
    <ImageView
        android:id="@+id/v_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70.5"
        android:layout_marginLeft="@dimen/dimen_01"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_menu"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        />

    <FrameLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RadioGroup
            android:id="@+id/rg_bottom"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:background="@color/bg_f3"
            android:layout_height="@dimen/dimen_46">
            //测试
            <RadioButton
                android:background="@null"
                android:id="@+id/rb_home"
                android:drawableTop="@drawable/selector_radiobutton_home"
                android:textSize="@dimen/size_10"
                android:text="工作台"
                android:gravity="center"
                android:checked="true"
                android:textColor="@drawable/selector_radiobuttontext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_5"
                android:button="@null"
                android:layout_height="match_parent"/>
            <RadioButton
                android:background="@null"
                android:id="@+id/rb_file"
                android:drawableTop="@drawable/selector_radiobutton_file"
                android:textSize="@dimen/size_10"
                android:text="档案管理"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:textColor="@drawable/selector_radiobuttontext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/rb_export"
                android:background="@null"
                android:drawableTop="@drawable/icon_menu_file_dis"
                android:textSize="@dimen/size_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_color_login2"
                android:button="@null"/>

            <RadioButton
                android:background="@null"
                android:id="@+id/rb_work"
                android:drawableTop="@drawable/selector_radiobutton_work"
                android:textSize="@dimen/size_10"
                android:text="业务管理"
                android:gravity="center"
                android:drawablePadding="@dimen/dimen_5"
                android:textColor="@drawable/selector_radiobuttontext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/rb_set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/selector_radiobutton_set"
                android:gravity="center"
                android:drawablePadding="@dimen/dimen_5"
                android:text="我的"
                android:textColor="@drawable/selector_radiobuttontext"
                android:textSize="@dimen/size_10" />
        </RadioGroup>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_export"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_0.5"
            android:layout_gravity="center|top"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_export" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/dimen_4"
            android:text="开销售单"
            android:textColor="@color/text_color_login2"
            android:textSize="@dimen/size_10" />
    </FrameLayout>



</RelativeLayout>


